@model CarsByMake
@{
    ViewData["Title"] = Model.Make;
}

<h2>ViewData["Title"]</h2>

<h2>All Customers</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>KM</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <th>@car.Make</th>
                <th>@car.Model</th>
                <th>@car.TravelledDistance</th>
            </tr>
        }
    </tbody>
</table>

