extends ../layout.pug

block content
  form.form.center-form.col-md-6(method='post',  enctype='multipart/form-data')
    h2 Add Meme
    .form-group.row
      label.col-sm-2.col-form-label(for='title') Title
      .col-sm-10
        input#title.form-control(name='title', type='text')
    .form-group.row
      label.col-sm-2.col-form-label(for='tags') Tags
      .col-sm-10
        input#tags.form-control(name='tags', type='text')
        span.add-tags Enter tags comma separated
    .form-group.row
      label.col-sm-2.col-form-label(for='image') Meme
      .col-sm-10
        input#image.form-control(name='image', type='file', accept='.jpg,.jpeg,.png')
    
    .form-group
      .col-sm-offset-2.col-sm-10
        input.form-btn.btn.btn-primary(type='submit', value='Add Meme')